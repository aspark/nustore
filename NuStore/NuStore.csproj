<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>netcoreapp2.1</TargetFramework>
	<PackAsTool>true</PackAsTool>
	<ToolCommandName>nustore</ToolCommandName>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <Version>1.1.5</Version>
    <PackageProjectUrl>https://github.com/aspark/nustore</PackageProjectUrl>
    <Title>NuStore</Title>
    <Description>NuStore download nuget packages which declared in the *.deps.json, and save to store folder, for minify .net core publish size</Description>
    <PackageTags>deps nuget package store folder</PackageTags>
    <RepositoryUrl>https://github.com/aspark/nustore</RepositoryUrl>
    <Authors>aspark</Authors>
    <PackageId>nustore</PackageId>
    <Copyright>MIT</Copyright>
    <PackageLicenseUrl>https://licenses.nuget.org/MIT</PackageLicenseUrl>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="pack release cmd" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="CommandLineParser" Version="2.5.0" />
    <PackageReference Include="ILRepack.NETStandard" Version="2.0.4" />
    <PackageReference Include="Newtonsoft.Json" Version="13.0.1" />
  </ItemGroup>

</Project>
